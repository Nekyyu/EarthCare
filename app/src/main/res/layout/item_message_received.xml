<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp"
    android:paddingVertical="4dp">

    <ImageView
        android:id="@+id/imageViewAvatarReceived"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_robot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_robot" />

    <TextView
        android:id="@+id/textViewMessageReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_message_received"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/imageViewAvatarReceived"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Este es un mensaje recibido del bot."
        android:maxWidth="250dp"/>

    <TextView
        android:id="@+id/textViewTimeReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="10sp"
        tools:text="10:30 AM"
        app:layout_constraintStart_toStartOf="@id/textViewMessageReceived"
        app:layout_constraintTop_toBottomOf="@id/textViewMessageReceived" />

</androidx.constraintlayout.widget.ConstraintLayout> 